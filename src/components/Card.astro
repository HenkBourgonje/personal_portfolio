---
export interface Props {
  image: string;
  title: string;
  body: string;
  techList: string[];
}
const { image, title, body, techList } = Astro.props as Props;
---

<div class="card">
  <img class="image" src={image} alt="" />
  <h3>{title}</h3>
  <p>{body}</p>
  <h4>Tech list</h4>

  <ul>
    {techList.map((item) => <li>{item}</li>)}
  </ul>
</div>

<style>
  .card {
    background: #fff;
    padding: 32px 35px;
    border-radius: 0.9rem;
    box-shadow: 0 0 0.9rem rgba(0, 0, 0, 0.1);
    margin-bottom: 1.8rem;
    text-align: center;
  }

  .image {
    max-height: 2.4rem;
    margin-bottom: 2rem;
  }
</style>
