---
import logo from "../images/logo.svg";
import linkedInLogo from "../images/In-White-128@2x.png";
import githubLogo from "../images/github-mark-white.svg";
---

<header class="header">
  <div class="container">
    <div class="logo">
      <a href="/">
        <img src={logo} alt="" />
      </a>
    </div>
    <nav>
      <ul>
        <li><a href="/blog">Blog</a></li>
        <li>
          <a href="/contact">
            <button class="btn">Say Hello</button>
          </a>
        </li>
        <li>
          <a href="https://www.linkedin.com/in/henk-bourgonje/" target="_blank"
            ><img class="header_logo" src={linkedInLogo} />
          </a>
        </li>
        <li>
          <a href="https://github.com/HenkBourgonje" target="_blank"
            ><img class="header_logo" src={githubLogo} />
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    height: 100px;
    background: var(--color-primary);
  }
  .header .container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 17px;
  }
  .header img {
    height: 35px;
    vertical-align: middle;
  }
  .header nav ul {
    display: flex;
    align-items: baseline;
  }
  .header nav ul li {
    height: 42px;
    padding: 0 14px;
  }
  .header nav ul li a {
    color: #fff;
  }
  .btn {
    border-radius: 2rem;
  }
</style>
